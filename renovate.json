{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:js-lib",
        ":timezone(Asia/Tokyo)"
    ],
    "dependencyDashboard": true,
    "regexManagers": [
        {
            "fileMatch": [
                "^pnpm-workspace\\.yaml$"
            ],
            "matchStrings": [
                "\"([^\"]+)\": \"catalog:(?<depName>[^\"]+@(?<currentValue>[^\"]+))\""
            ],
            "depNameTemplate": "{{depName}}",
            "datasourceTemplate": "npm",
            "versioningTemplate": "npm"
        }
    ]
}